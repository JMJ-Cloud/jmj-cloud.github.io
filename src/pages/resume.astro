---
// resume.astro
// Resume page - Company portfolio and expertise
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { getCollection } from 'astro:content';

// Get all projects and sort by order (lower = more recent/featured)
const allProjects = await getCollection('projects');
const sortedProjects = allProjects.sort((a, b) => a.data.order - b.data.order);

// Separate active and completed projects
const activeProjects = sortedProjects.filter(p => p.data.status === 'Active');
const completedProjects = sortedProjects.filter(p => p.data.status === 'Completed');
---

<BaseLayout
  title="Resume"
  description="JMJ Cloud team portfolio, recent projects, and technical expertise in Oracle solutions."
  currentPath="/resume"
>
  <section class="resume-listing">
    <div class="container">
      <header class="resume-header">
        <h1 class="resume-title">Company Portfolio</h1>
        <p class="resume-description">
          Oracle expertise delivering enterprise solutions across industries
        </p>
      </header>

      <!-- Current Projects -->
      <div class="section-header">
        <h2 class="section-title">Current Projects</h2>
      </div>

      <div class="projects-grid">
        {activeProjects.map((project) => (
          <ProjectCard
            title={project.data.title}
            status={project.data.status}
            year={project.data.year}
            summary={project.data.summary}
            slug={project.slug}
            technologies={project.data.technologies}
            industry={project.data.industry}
            metrics={project.data.metrics}
          />
        ))}
      </div>

      <!-- Recent Projects -->
      <div class="section-header">
        <h2 class="section-title">Recent Projects</h2>
      </div>

      <div class="projects-grid">
        {completedProjects.map((project) => (
          <ProjectCard
            title={project.data.title}
            status={project.data.status}
            year={project.data.year}
            summary={project.data.summary}
            slug={project.slug}
            technologies={project.data.technologies}
            industry={project.data.industry}
            metrics={project.data.metrics}
          />
        ))}
      </div>

      <!-- Technical Expertise -->
      <div class="section-header">
        <h2 class="section-title">Technical Expertise</h2>
      </div>

      <div class="expertise-grid">
        <article class="expertise-card glow-border">
          <h3 class="expertise-title">Oracle Cloud Applications</h3>
          <ul class="expertise-list">
            <li>Oracle Fusion Cloud ERP (GL, AP, AR, FA, CE)</li>
            <li>Oracle Cloud HCM (Core HR, Payroll, Talent)</li>
            <li>Oracle Cloud PPM (Projects, Grants)</li>
            <li>Oracle Transactional Business Intelligence (OTBI)</li>
            <li>BIP (BI Publisher) & FBDI Data Integration</li>
            <li>Oracle Integration Cloud (OIC)</li>
          </ul>
        </article>

        <article class="expertise-card glow-border">
          <h3 class="expertise-title">Development & Integration</h3>
          <ul class="expertise-list">
            <li>Oracle APEX (Low-Code Development)</li>
            <li>Oracle REST Data Services (ORDS)</li>
            <li>PL/SQL & SQL Optimization</li>
            <li>RESTful Web Services & APIs</li>
            <li>JavaScript, HTML5, CSS3</li>
            <li>Oracle Database 19c & 21c</li>
          </ul>
        </article>

        <article class="expertise-card glow-border">
          <h3 class="expertise-title">E-Business Suite</h3>
          <ul class="expertise-list">
            <li>EBS 12.2 (GL, AP, AR, FA, PO, OM)</li>
            <li>Oracle Workflow & Approvals</li>
            <li>Custom Extensions & Personalizations</li>
            <li>EBS Forms & Reports</li>
            <li>Cloud Coexistence Architecture</li>
            <li>Migration & Upgrade Services</li>
          </ul>
        </article>

        <article class="expertise-card glow-border">
          <h3 class="expertise-title">Industries Served</h3>
          <ul class="expertise-list">
            <li>Healthcare & Life Sciences</li>
            <li>Manufacturing & Distribution</li>
            <li>Higher Education</li>
            <li>Financial Services</li>
            <li>Professional Services</li>
            <li>Public Sector & Government</li>
          </ul>
        </article>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .resume-listing {
    padding: var(--space-12) 0 var(--space-20);
  }

  .resume-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .resume-title {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-4);
  }

  .resume-description {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .section-header {
    margin: var(--space-16) 0 var(--space-8);
  }

  .section-title {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    color: var(--text-primary);
  }

  .projects-grid {
    display: grid;
    gap: var(--space-6);
    margin-bottom: var(--space-8);
  }

  .expertise-grid {
    display: grid;
    gap: var(--space-6);
  }

  .expertise-card {
    background-color: var(--bg-secondary);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
  }

  .expertise-title {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    color: var(--accent-primary);
    margin-bottom: var(--space-4);
  }

  .expertise-list {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .expertise-list li {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    padding-left: var(--space-6);
    position: relative;
  }

  .expertise-list li::before {
    content: 'â–¸';
    position: absolute;
    left: 0;
    color: var(--accent-primary);
  }

  @media (min-width: 768px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .expertise-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .expertise-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
