---
// portfolio.astro
// Portfolio page - Company project showcase
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { getCollection } from 'astro:content';

// Get all projects and sort by date (newest first)
const allProjects = await getCollection('projects');
const sortedProjects = allProjects.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

// Helper function to check if a project is E-Business Suite related
function isEBSProject(technologies: string[]): boolean {
  const ebsKeywords = [
    'Oracle E-Business Suite',
    'Oracle EBS',
    'EBS R12',
    'E-Business Suite'
  ];
  return technologies.some(tech =>
    ebsKeywords.some(keyword => tech.toLowerCase().includes(keyword.toLowerCase()))
  );
}

// Separate projects into EBS and non-EBS (Cloud/Fusion)
const ebsProjects = sortedProjects.filter(p => isEBSProject(p.data.technologies));
const cloudProjects = sortedProjects.filter(p => !isEBSProject(p.data.technologies));

// Create paired rows for aligned grid layout
const maxRows = Math.max(ebsProjects.length, cloudProjects.length);
const rows = Array.from({ length: maxRows }, (_, i) => ({
  ebs: ebsProjects[i] || null,
  cloud: cloudProjects[i] || null,
}));
---

<BaseLayout
  title="Portfolio"
  description="JMJ Cloud project portfolio showcasing Oracle solutions and technical expertise across industries."
  currentPath="/portfolio"
>
  <section class="portfolio-listing">
    <div class="container">
      <header class="portfolio-header">
        <h1 class="portfolio-title">Our Portfolio</h1>
        <p class="portfolio-description">
          Oracle expertise delivering enterprise solutions across industries
        </p>
      </header>

      <div class="projects-grid">
        {rows.map((row) => (
          <>
            {row.ebs ? (
              <ProjectCard
                title={row.ebs.data.title}
                summary={row.ebs.data.summary}
                slug={row.ebs.slug}
                technologies={row.ebs.data.technologies}
                industry={row.ebs.data.industry}
                metrics={row.ebs.data.metrics}
              />
            ) : (
              <div class="empty-cell" />
            )}
            {row.cloud ? (
              <ProjectCard
                title={row.cloud.data.title}
                summary={row.cloud.data.summary}
                slug={row.cloud.slug}
                technologies={row.cloud.data.technologies}
                industry={row.cloud.data.industry}
                metrics={row.cloud.data.metrics}
              />
            ) : (
              <div class="empty-cell" />
            )}
          </>
        ))}
      </div>

    </div>
  </section>
</BaseLayout>

<style>
  .portfolio-listing {
    padding: var(--space-12) 0 var(--space-20);
  }

  .portfolio-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .portfolio-title {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-4);
  }

  .portfolio-description {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .projects-grid {
    display: grid;
    gap: var(--space-6);
  }

  @media (min-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-6) var(--space-8);
    }
  }

  .empty-cell {
    display: none;
  }

  @media (min-width: 1024px) {
    .empty-cell {
      display: block;
    }
  }
</style>
