---
// portfolio.astro
// Portfolio page - Company project showcase
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { getCollection } from 'astro:content';

// Get all projects and sort by date (newest first)
const allProjects = await getCollection('projects');
const sortedProjects = allProjects.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

// Helper function to check if a project is E-Business Suite related
function isEBSProject(technologies: string[]): boolean {
  const ebsKeywords = [
    'Oracle E-Business Suite',
    'Oracle EBS',
    'EBS R12',
    'E-Business Suite'
  ];
  return technologies.some(tech =>
    ebsKeywords.some(keyword => tech.toLowerCase().includes(keyword.toLowerCase()))
  );
}

// Separate projects into EBS and non-EBS (Cloud/Fusion)
const ebsProjects = sortedProjects.filter(p => isEBSProject(p.data.technologies));
const cloudProjects = sortedProjects.filter(p => !isEBSProject(p.data.technologies));
---

<BaseLayout
  title="Portfolio"
  description="JMJ Cloud project portfolio showcasing Oracle solutions and technical expertise across industries."
  currentPath="/portfolio"
>
  <section class="portfolio-listing">
    <div class="container">
      <header class="portfolio-header">
        <h1 class="portfolio-title">Our Portfolio</h1>
        <p class="portfolio-description">
          Oracle expertise delivering enterprise solutions across industries
        </p>
      </header>

      <div class="portfolio-columns">
        <!-- E-Business Suite Projects -->
        <div class="portfolio-column">
          <div class="projects-list">
            {ebsProjects.map((project) => (
              <ProjectCard
                title={project.data.title}
                summary={project.data.summary}
                slug={project.slug}
                technologies={project.data.technologies}
                industry={project.data.industry}
                metrics={project.data.metrics}
              />
            ))}
          </div>
        </div>

        <!-- Oracle Cloud / Fusion Projects -->
        <div class="portfolio-column">
          <div class="projects-list">
            {cloudProjects.map((project) => (
              <ProjectCard
                title={project.data.title}
                summary={project.data.summary}
                slug={project.slug}
                technologies={project.data.technologies}
                industry={project.data.industry}
                metrics={project.data.metrics}
              />
            ))}
          </div>
        </div>
      </div>

    </div>
  </section>
</BaseLayout>

<style>
  .portfolio-listing {
    padding: var(--space-12) 0 var(--space-20);
  }

  .portfolio-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .portfolio-title {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-4);
  }

  .portfolio-description {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .portfolio-columns {
    display: grid;
    gap: var(--space-8);
  }

  @media (min-width: 1024px) {
    .portfolio-columns {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-12);
    }
  }

  .portfolio-column {
    display: flex;
    flex-direction: column;
  }

  .projects-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }
</style>
